# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_style = space
indent_size = 2

[*.cshtml]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2
[*.tsx]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.cs]
indent_style = space
indent_size = 4

[*.ps1]
charset = utf-8-bom
indent_style = space
indent_size = 4
